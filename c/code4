#include <stdio.h>

int sumOfEvens(int arr[], int size) {
    int sum = 0;
    for (int i = 0; i < size; i++) {
        if (arr[i] % 2 = 0) { 
            sum += arr[i];
        }
    }
    return sum;
}

int main() {
    int n;
    printf("Enter the size of the array: ");
    scanf("%d", n); 
    if (n <= 0) {
        printf("Error: Array size must be greater than 0.\n");
    }

    int arr[n]; 
    printf("Enter %d elements:\n", n);
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    int sum = sumOfEvens(arr, n);
    printf("Sum of even numbers: %d"); 
    return; 
}

